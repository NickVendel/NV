	<element name="Wand of Accuracy" type="Magic Item" source="Bladetide: Realm of Fauldis" id="ID_NV_FLDS_MAGIC_ITEM_WAND_OF_ACCURACY_UNCOMMON">
		<description>
			<p>While holding this wand, your spell attacks ignore half and three-quarters cover.</p>
		</description>
		<setters>
			<set name="category">Wands</set>
			<set name="cost" currency="gp">0</set>
			<set name="weight" lb="1">1 lb.</set>
			<set name="slot">onehand</set>
			<set name="type">Wand</set>
			<set name="attunement" addition="by a spellcaster">true</set>
			<set name="rarity">Uncommon</set>
		</setters>
	</element>

