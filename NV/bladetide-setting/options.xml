<elements>
    <info>
        <name>Options</name>
        <description>Options for Bladetide Campaigns.</description>
		<author url="https://www.reddit.com/user/Nick_Vendel/">Nick Vendel</author>
		<update version="0.0.4">
			<file name="options.xml" url="https://raw.githubusercontent.com/NickVendel/NV-elements/master/NV/bladetide-setting/options.xml" />
        </update>
    </info>

    <element name="Realm of Fauldis" type="Option" source="Bladetide: Realm of Fauldis" id="ID_NV_BDTD_FLDS_OPTION_ATTUNEMENT">
        <description>
            <p>This Option includes every other Option used in the campaigns of this setting.</p>
        </description>
        <sheet display="false">
            <description>This Option includes every other Option used in the campaigns of this setting.</description>
        </sheet>
        <rules>
            <grant type="Option" id="ID_NV_BDTD_OPTION_ATTUNEMENT" />
            <grant type="Option" id="ID_NV_FLDS_OPTION_CLASS_FEATURE_VARIANTS" />
        </rules>
    </element>

    <!-- Attunement Option -->
    <element name="Attunement Option" type="Option" source="Bladetide Setting" id="ID_NV_BDTD_OPTION_ATTUNEMENT">
        <description>
            <p>This option makes maximum number of attuned items equal to Proficiency Bonus.</p>
        </description>
        <sheet display="false">
            <description>This option makes maximum number of attuned items equal to Proficiency Bonus.</description>
        </sheet>
        <rules>
            <stat name="attunement:max" value="-3" />
            <stat name="attunement:max" value="proficiency" />
        </rules>
    </element>
</elements>